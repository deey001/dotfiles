# ble.sh configuration

# Disable paste confirmation and syntax validation logic
bleopt edit_abell=
bleopt exec_errexit_mark=
bleopt exec_elapsed_mark=

# Threshold for accepting lines (0 means accept all immediately)
bleopt accept_line_threshold=0

# Bindings to force execution
ble-bind -m emacs -f 'C-m' 'accept-line'
ble-bind -m emacs -f 'RET' 'accept-line'
ble-bind -m vi_imap -f 'C-m' 'accept-line'
ble-bind -m vi_imap -f 'RET' 'accept-line'
