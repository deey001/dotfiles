# .bash_exports: Exported environment variables
# This file defines variables that are exported to child processes, like PATH modifications or default editor.

# Add user bin directory to PATH
export PATH="$PATH:$HOME/bin"

export TERM=xterm-256color

export LESS='-R'
export LESSOPEN='|~/.lessfilter %s'

# History configuration
export HISTFILESIZE=10000
export HISTSIZE=5000
export HISTTIMEFORMAT="%F %T "  # Add timestamp to history

# perl plenv
# export PATH="$HOME/.plenv/bin:$PATH"
# eval "$(plenv init -)"

# golang
export GOPATH=~/gocode
export PATH="$GOPATH/bin:${PATH}:/usr/local/go/bin"

# ruby rbenv (only if installed)
if [ -d "$HOME/.rbenv" ]; then
    export PATH="$HOME/.rbenv/bin:$PATH"
    if command -v rbenv > /dev/null 2>&1; then
        eval "$(rbenv init -)"
    fi
    export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"
fi

# Set default editor to Neovim (dynamically find nvim location)
if command -v nvim > /dev/null 2>&1; then
    export EDITOR="$(which nvim)"
else
    export EDITOR="$(which vim)"
fi

# bat theme configuration
export BAT_THEME="Visual Studio Dark+"
